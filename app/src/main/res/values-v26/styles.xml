<resources>

    <style name="myTransparent">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>

    <style name="RoundBlueTextView">
        <item name="android:text">xxxx</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/size30</item>
        <item name="android:padding">@dimen/px20</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Tv12white" parent="TextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/size24</item>
    </style>

    <style name="Tv15white" parent="TextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/size30</item>
    </style>


