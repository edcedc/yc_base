<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--parent设置为启动页的theme-->
    <style name="AppTheme.customeTheme" parent="AppTheme">
        <item name="android:windowBackground">@mipmap/ic_launcher</item>
        <!--
                <item name="android:windowFullscreen">?android:windowNoTitle</item>

                <item name="windowActionBar">false</item>
                <item name="windowNoTitle">true</item>
                <item name="android:textAllCaps">false</item>
                -->
    </style>

    <style name="title_bar">
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="LoadingLayoutStyle" parent="LoadingLayout.Style">
        <item name="llEmptyImage">@mipmap/empty</item>
        <item name="llErrorImage">@mipmap/error</item>
    </style>

    <style name="AppTheme.AppBarLight" parent="ThemeOverlay.AppCompat.Light" >
        <!--<item name="colorPrimary">@color/gray_ffeff0f0</item>-->
        <!--<item name="colorPrimaryDark">@color/gray_ffeff0f0</item>-->
    </style>

    <style name="AppTheme.Popup" parent="ThemeOverlay.AppCompat.Light" />

    <style name="divider_dropshadow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@drawable/toolbar_dropshadow</item>
    </style>

    <style name="FragmentDialogAnimation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_push_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_push_out</item>
    </style>

    <style name="divider_1">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/white_f4f4f4</item>
    </style>

    <style name="myTransparent">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>

    <style name="RoundBlueTextView">
        <item name="android:text">xxxx</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/size30</item>
        <item name="android:padding">@dimen/px20</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Tv12white" parent="TextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/size24</item>
    </style>

    <style name="Tv15white" parent="TextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/size30</item>
    </style>


    <style name="TextStyle">
        <!--<item name="android:background">@null</item>-->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
